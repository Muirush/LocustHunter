<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"

    tools:context=".Register">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/locust_hunter_icon1"
        android:layout_centerHorizontal="true"/>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="100dp"

        android:layout_centerInParent="true"

        android:layout_margin="16dp"

        >
        <EditText
            android:id="@+id/RUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded1"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:gravity="center"

            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:inputType="text"
            android:hint="Enter username"
            android:textColor="@color/black"
            android:drawableRight="@drawable/person"
            />
        <EditText
            android:id="@+id/RPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded1"
            android:padding="10dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:inputType="text"
            android:hint="Enter password"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:layout_marginBottom="16dp"
            />
        <EditText
            android:id="@+id/R_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded1"
            android:padding="10dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:inputType="text"
            android:hint="Conform Password"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="240dp"
            android:id="@+id/R_register"
            android:layout_marginLeft="32dp"
            android:background="@drawable/rounded1"
            android:layout_marginRight="32dp"
            android:text="Register"
            android:textSize="18sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:text="Already have an account"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textStyle="italic"
            android:onClick="logActivity"
            />



    </androidx.cardview.widget.CardView>




</RelativeLayout>